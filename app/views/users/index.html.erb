<h1>List of all users :</h1>

<ul class="user-list">
  <% @users.each do |user| %>
    <li class="user-card">
      <%= image_tag(user.photo, alt: user.name, class: "user-photo") %>
      <div class="user-details">
        <%= link_to user_path(user) do %>
          <h2><%= user.name %></h2>
        <% end %>
        <p>Number of posts: <%= user.posts.count %></p>
      </div>
    </li>
  <% end %>
</ul>