<%= link_to 'Back', user_posts_path %>
<h1>Specific post by a Specific User</h1>

<div class="post">
  <% if can? :destroy, @post %>
    <%= link_to "Delete Post", user_post_path(@post.author, @post), data: { turbo_method: :delete, turbo_confirm: "This post will be permanently removed. Do you want to proceed?" } %>
  <% end %>

  <div class="post-header">
    <h3><%= @post.title %> by <%= @post.author.name %></h3>
  </div>

  <div class="post-body">
    <p><%= @post.text %></p>
    <p>Comments: <%= @post.comments_counter %>, Likes: <%= @post.likes_counter %></p>
  </div>

  <div class="post-likes">
  <%= form_with(model: [@post, @like], url: user_post_likes_path(@post.author, @post), method: :post) do |form| %>
    <%= form.submit 'Like' %>
  <% end %>
  </div>

  <div class="post-comments">
    <strong><%= link_to "Add comment", new_user_post_comment_path(@post.author, @post) %></strong>
    <% @post.comments.includes(:user).each do |comment| %>
      <p>
        <strong><%= comment.user.name %> :</strong> <%= comment.text %>
      </p>
      <% if can? :destroy, comment %>
        <%= link_to "Delete comment", user_post_comment_path(@post.author, @post, comment), data: { turbo_method: :delete, turbo_confirm: "Do you really want to delete this comment?" } %>
      <% end %>
    <% end %>    
  </div>
</div>
